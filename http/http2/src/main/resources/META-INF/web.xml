<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <servlet>
        <servlet-name>io.quarkus.ts.http.http2.GreetingServlet</servlet-name>
        <servlet-class>io.quarkus.ts.http.http2.GreetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>io.quarkus.ts.http.http2.GreetingServlet</servlet-name>
        <url-pattern>hello</url-pattern>
    </servlet-mapping>
